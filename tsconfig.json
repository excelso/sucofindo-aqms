{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "downlevelIteration": true,
        "baseUrl": ".",
        "allowJs" : true,
        "strict": false,                 // Enable strict type-checking options
        "skipLibCheck": true,           // Skip type checking of declaration files
        "noImplicitAny": false,         // Bypass raising errors on `any` type
        "jsx" : "preserve",
        "types": ["vite/client"],
        "resolveJsonModule": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": [
                "resources/*"
            ]
        },
        "lib": [
            "es2017",
            "dom",
            "dom.iterable",
            "es2015",
            "es2019"
        ]
    },
    "include": [
        "resources/js/**/*",
        "node_modules/@types/jquery/misc.d.ts",
        "node_modules/@types/jquery/JQueryStatic.d.ts"
    ],
    "exclude": [
        "node_modules",
        "vendor"
    ]
}
